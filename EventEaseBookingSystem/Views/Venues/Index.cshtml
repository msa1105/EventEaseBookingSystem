@model IEnumerable<EventEaseBookingSystem.Models.Venue>
@{
    ViewData["Title"] = "Venues";
}

<h2>Venues</h2>
<p><a asp-action="Create">+ Add New Venue</a></p>

<table>
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VenueName</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td><img src="@item.ImageUrl" alt="Venue Image" width="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VenueId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VenueId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
